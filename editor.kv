#:kivy 1.1.0

Root:
    file_input: file_input
    text_md5: text_md5
    text_sha1: text_sha1
    text_sha256: text_sha256
    text_sha512: text_sha512
    text_compare: text_compare
    compare_label: compare_label

    BoxLayout:
        orientation: 'vertical'
        spacing: 20

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            spacing: 20

            TextInput:
                id: file_input
                text: ''
                readonly: True

            Button:
                text: 'Load'
                on_release: root.show_load()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            spacing: 20

            Label:
                size: self.texture_size
                text: 'MD5'

            TextInput:
                id: text_md5
                text: ''
                readonly: True

            Button:
                text: 'Copy MD5'
                on_release: root.copymd5()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            spacing: 20

            Label:
                size: self.texture_size
                text: 'SHA-1'

            TextInput:
                id: text_sha1
                text: ''
                readonly: True

            Button:
                text: 'Copy SHA-1'
                on_release: root.copysha1()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            spacing: 20

            Label:
                size: self.texture_size
                text: 'SHA-256'

            TextInput:
                id: text_sha256
                text: ''
                readonly: True

            Button:
                text: 'Copy SHA-256'
                on_release: root.copysha256()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            spacing: 20

            Label:
                size: self.texture_size
                text: 'SHA-512'

            TextInput:
                id: text_sha512
                text: ''
                readonly: True

            Button:
                text: 'Copy SHA-512'
                on_release: root.copysha512()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30
            spacing: 20

            TextInput:
                id: text_compare
                hint_text: 'Compare Hash...'

            Button:
                text: 'Compare'
                on_release: root.compareHashes()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30

            Label:
                id: compare_label
                size: self.texture_size
                text: ''

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)